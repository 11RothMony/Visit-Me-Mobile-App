<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/id"
        >
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imgPlaces"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#e1e1e1"/>

        <TextView
            android:id="@+id/txtNamePlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgPlaces"
            android:padding="8dp"
            android:text="Royal Palace"
            android:textSize="17sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="culture, sightseeing..."
            android:layout_toRightOf="@+id/imgPlaces"
            android:padding="8dp"
            android:layout_marginTop="25dp"
            android:textStyle="italic"
            android:textSize="15sp"/>
        <CheckBox
            android:id="@+id/checkboxPlaces"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_toRightOf="@+id/imgPlaces"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/checkboxPlaces"
            android:layout_marginTop="65dp"
            android:text="~ 1.3 Km"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:src="@drawable/home_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</LinearLayout>